<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <!-- Day Name -->
   <TextView android:text="Monday" 
          android:id="@+id/day" 
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content"
          android:background="#858585"
          android:textColor="@android:color/white"
          />
   <!-- Temperature -->
   <TextView android:text="Temperature:" 
          android:id="@+id/temp" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:layout_below="@+id/day"
          android:textColor="@android:color/white"
          /> 
    <TextView android:text="79(F)/26(C) - 68(F)/20(C)" 
          android:id="@+id/tempv"
          android:layout_below="@+id/day" 
          android:layout_toRightOf="@+id/temp"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:paddingLeft="5dip"
          />
   <!-- Weather Condition -->   
    <TextView android:text="Weather:" 
          android:id="@+id/weather" 
          android:layout_below="@+id/temp"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:paddingBottom="10dip"
          android:textColor="@android:color/white"
          />  
     <TextView android:text="chances of rain" 
          android:id="@+id/weatherv"
          android:layout_below="@+id/temp" 
          android:layout_toRightOf="@+id/weather"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:paddingLeft="5dip"
          />   
</RelativeLayout>
